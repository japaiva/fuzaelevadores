
<!-- templates/gestor/grupo_list.html -->
{% extends 'gestor/base_gestor.html' %}

{% block title %}Grupos de Produtos | Portal do Gestor{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-layer-group me-2"></i>Grupos de Produtos</h2>
    <a href="{% url 'gestor:grupo_create' %}" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Novo Grupo
    </a>
</div>

<!-- Filtros -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Status</label>
                <select name="status" class="form-select">
                    <option value="">Todos</option>
                    <option value="ativo" {% if status_filtro == 'ativo' %}selected{% endif %}>Ativo</option>
                    <option value="inativo" {% if status_filtro == 'inativo' %}selected{% endif %}>Inativo</option>
                </select>
            </div>
            <div class="col-md-7">
                <label class="form-label">Buscar</label>
                <input type="text" name="q" class="form-control" value="{{ query|default:'' }}" placeholder="Código ou nome do grupo">
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <div class="d-grid">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Lista de Grupos -->
<div class="card">
    <div class="card-body">
        {% if grupos %}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th width="100">Código</th>
                            <th>Nome</th>
                            <th>Descrição</th>
                            <th width="80">Status</th>
                            <th width="120">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for grupo in grupos %}
                        <tr>
                            <td><strong>{{ grupo.codigo }}</strong></td>
                            <td>{{ grupo.nome }}</td>
                            <td>{{ grupo.descricao|truncatechars:60 }}</td>
                            <td>
                                {% if grupo.ativo %}
                                    <span class="badge bg-success">Ativo</span>
                                {% else %}
                                    <span class="badge bg-secondary">Inativo</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="{% url 'gestor:grupo_update' grupo.pk %}" class="btn btn-outline-primary" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="{% url 'gestor:grupo_toggle_status' grupo.pk %}" class="btn btn-outline-warning" title="Alterar Status">
                                        <i class="fas fa-power-off"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Paginação -->
            {% if grupos.has_other_pages %}
            <nav>
                <ul class="pagination justify-content-center">
                    {% if grupos.has_previous %}
                        <li class="page-item">
                            <a class="page-link" href="?page=1{% if query %}&q={{ query }}{% endif %}{% if status_filtro %}&status={{ status_filtro }}{% endif %}">&laquo; Primeira</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="?page={{ grupos.previous_page_number }}{% if query %}&q={{ query }}{% endif %}{% if status_filtro %}&status={{ status_filtro }}{% endif %}">Anterior</a>
                        </li>
                    {% endif %}
                    
                    <li class="page-item active">
                        <span class="page-link">{{ grupos.number }} de {{ grupos.paginator.num_pages }}</span>
                    </li>
                    
                    {% if grupos.has_next %}
                        <li class="page-item">
                            <a class="page-link" href="?page={{ grupos.next_page_number }}{% if query %}&q={{ query }}{% endif %}{% if status_filtro %}&status={{ status_filtro }}{% endif %}">Próxima</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="?page={{ grupos.paginator.num_pages }}{% if query %}&q={{ query }}{% endif %}{% if status_filtro %}&status={{ status_filtro }}{% endif %}">Última &raquo;</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
            {% endif %}
        {% else %}
            <div class="text-center py-4">
                <i class="fas fa-layer-group fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Nenhum grupo encontrado</h5>
                <p class="text-muted">Comece criando os grupos de produtos.</p>
                <a href="{% url 'gestor:grupo_create' %}" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Criar Primeiro Grupo
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
